        name="Nibor's Add-ons">
        <info compressed="false">http://nibor-xbmc-repo.googlecode.com/svn/trunk/addons.xml</info>
        <checksum>http://nibor-xbmc-repo.googlecode.com/svn/trunk/addons.xml.md5</checksum>
